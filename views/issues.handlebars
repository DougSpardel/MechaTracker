<form class="issueCreate" method="post" enctype="multipart/form-data">
    <div class="field">
        <label class="label" for="vehicleInput">Input vehicle number</label>
        <div class="control">
            <input class="input" id="vehicleInput" type="text" name="vehicle_number">
        </div>
    </div>
    <div class="field">
        <label class="label" for="descriptionInput">Input issue description</label>
        <div class="control">
            <input class="input" id="descriptionInput" type="text" name="issue_description">
        </div>
    </div>
    <div class="control">
        <button class="button is-link" id="issueBtn" type="submit">Submit</button>
    </div>
</form>
<script src="./js/issues.js" type="text/javascript"></script>
